<!DOCTYPE html>
<html lang="en">
<%- include("head") %>
<body>
<div class="container kh">
    <h1 class="display-5 TD">Tạo đơn hàng</h1>

    <div class="container TKH">
        <div class="fromkh">
            <form action="/luu-don-hang" method="post">
                <span class="sspan">Chọn Khách Hàng</span><br><br>
                <select class="custom-select mb-2" name="KhachHangID">
                    <% khs.map( e=> {%>
                        <option value="<%= e.ID %>"> <%= e.TenKH %> </option>
                    <% }) %>
                </select><br>
                <label class="form-check-label lab">Chọn Sản Phẩm</label>
                <ul class="donhangul">
                    <% sps.map( function (e) { %>
                        <li class="donhang"><label class="form-check-label"><input class="form-check-input" type="checkbox" name="SanPhamID[]" value="<%= e.ID%>"/> <%= e.TenSP%></label></li>
                    <%  }) %>
                </ul>
                <button class="btn btn-danger" type="submit">sumbit</button>
            </form>
        </div>
    </div>

</div>
</body>
</html>