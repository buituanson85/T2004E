<!DOCTYPE html>
<html lang="en">
<%- include("head") %>
<body>
   <div class="container kh">
       <h1 class="display-5 TD">Danh Sách Khách Hàng</h1>
       <form action="/search" method="get" class="form-inline send">
           <input type="text" name="keyword" class="form-control sendin" />
           <button class="btn btn-primary" type="submit">Search</button>
       </form>
       <table class="table table-hover">
           <thead>
           <tr>
               <th scope="col" class="th1">ID</th>
               <th scope="col" class="th2">Họ Và Tên</th>
               <th scope="col" class="th3">Địa chỉ</th>
               <th scope="col" class="th4">Số điện thoại</th>
               <th scope="col" class="th5">Email</th>
           </tr>
           </thead>
           <tbody>
           <% khs.map(function (v) { %>
               <tr>
                   <td class="td1"><%= v.ID %></td>
                   <td class="td2"><a class="aa" href="/chi-tiet-khach-hang/<%= v.ID %>"><%= v.TenKH %></a></td>
                   <td class="td3"><%= v.DiaChi %></td>
                   <td class="td4"><%= v.DienThoai %></td>
                   <td class="td4"><%= v.Email %></td>
               </tr>
           <% }) %>
           </tbody>
       </table>
       <button type="submit"  class="btn btn-secondary"><a href="/them-khach-hang" class="aa">Thêm Khách Hàng</a></button><br><br>
       <button type="submit"  class="btn btn-secondary dssp"><a href="/danh-sach-san-pham" class="aa">Danh Sách Sản Phẩm</a></button>
   </div>
</body>
</html>